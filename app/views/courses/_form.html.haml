.container
  -# frozen_string_literal: true
  = simple_form_for(@course) do |f|
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

    .form-inputs
      = f.input :title
      = f.label :description
      = f.rich_text_area :description
      %small= f.error :description, class: 'text-danger'
      = f.input :short_description, class: 'border-light', label: 'Summary'
      = f.input :language, collection: ["English", "Spanish", "Russian"]
      = f.input :level, collection: ["Beginner", "Intermediate", "Advanced"]
      = f.input :price


    .form-actions.mt-2
      = f.button :submit, class: 'border-0 bg-purple-2 text-black btn-hover-purple btn'
