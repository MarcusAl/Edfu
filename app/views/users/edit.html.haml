- content_for :title do
  Users
  \|
  = @user.username

.container.mt-4
  .card.w-75.mx-auto
    .card-header
      %h4
        Editing roles for
        = @user.email
    .card-body
      = simple_form_for @user do |f|
        = f.collection_check_boxes :role_ids, Role.all, :id, :name
        = f.error :roles, class: 'text-danger'
        %hr
        = f.button :submit, class: "btn border-0 bg-purple-2 text-black btn-hover-purple"
    .card-footer
      = link_to 'Cancel', users_path, class: 'btn btn-outline-danger text-black'