        .col-6.pos-relative.border-end.border-light.border-1.w-100.h-50.d-none.d-md-block
          .circle-1
          .circle-2
          .circle-3
          .circle-4
      = image_tag("vector1.png", class: "img-figure col-8 img-fluid border-end me-5 border-light border-1 visible")
  - if current_user
    .container
      .col-12.visible.d-md-none.mb-5.mb-md-0
        = search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f|
          .form-inline.d-flex.rounded-0
            %button.btn.btn-lg.btn-cta2.visible.rounded-0.rounded-start{:type => "submit"}
              %i.fas.fa-search{"aria-hidden" => "true"}
            = f.search_field :title_cont, placeholder: 'Search for anything', class: 'form-control form-control-sm rounded-0 rounded-end'
    .container
      .card-group.mt-2.row.mx-auto.col-6-md
        = link_to courses_path, class: "card card-body text-black col-12 text-center p-3 bg-light heavy_round border-0 hover-card-blue visible d-md-block main_card_cont" do
          %h1
            .fa.fa-graduation-cap.display-5
          .fw-bold
            = Course.count
            online courses
          .row
          Explore a variety of fresh topics
        = link_to courses_path, class: "card card-body text-black col-12 text-center p-3 bg-light heavy_round border-0 hover-card-salmon visible d-none d-md-block mt-5 mt-md-0 ms-md-3" do
          %h1
            .fa.fa-chalkboard-teacher.display-5
            /.fa.fa-brain
          .fw-bold
            = Course.distinct.count(:user_id)
            expert music instructors
          .row
          Find the right instructor for you
        = link_to courses_path, class: "card card-body text-black col-12 text-center p-3 bg-light heavy_round border-0 hover-card-aqua visible d-none d-md-block mt-5 mt-md-0 ms-md-3" do
          %h1
            .fa.fa-user-graduate.display-5
          .fw-bold
            = User.count
